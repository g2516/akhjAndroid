<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:padding="8dp" >
            
     <TextView 
        android:id="@+id/carName"
        android:singleLine="true"
        android:textSize="12sp"
        
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/carManufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/carName"
        android:layout_alignBottom="@+id/carName"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/carName"
        android:singleLine="true"        
        android:textSize="12sp" />

    <TextView
        android:id="@+id/carModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/carManufacturer"
        android:layout_alignBottom="@+id/carManufacturer"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/carManufacturer"
        android:singleLine="true"
        android:textSize="12sp" />
</RelativeLayout>
